<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <%= image_tag @user.profile.avatar.url(:medium), class: 'avatar-show-img' %>
    </div>

    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
      
        <% if current_user.plan_id == 2 %>
          <div class="well profile-block contact">
            <h3>Contact Information</h3>
              <p><%= @user.profile.phone_number %></p>
              <h4><%= @user.profile.contact_email %><h4>
          </div>
        <% end %>
        
        <div class="well profile-block description">
          <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
    </div>
  </div>
</div>